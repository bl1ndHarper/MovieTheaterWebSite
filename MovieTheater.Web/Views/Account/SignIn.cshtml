@{
    ViewData["Title"] = "Keen-Chick!: Sign In";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
}
<div class="back-btn-div font-main">
    <a asp-area="" asp-controller="Home" asp-action="Index" class="back-btn "> ← Назад</a>
</div>

<div class="d-flex justify-content-center">
    <div class="styled-container" style="width:30vw;">
        <form asp-controller="Account" asp-action="LoginMvc" method="post" class="d-flex flex-column" id="signInForm">
            <p class="font-main form-main-text">Вхід в акаунт</p>
            
            <label for="userEmail" class="font-secondary mt-3">Електрона пошта</label>
            <div class="d-flex justify-content-center">
                <input type="email" name="Email" id="userEmail" required>
            </div>

            <label for="userPassword" class="font-secondary mt-3">Пароль</label>
            <div class="d-flex justify-content-center">
                <input type="password" name="Password" id="userPassword" required>
            </div>
            
            <div class="d-flex justify-content-center mt-4 mb-3">
                <button type="submit" id="submitSignIn">Увійти</button>
            </div>

            <span class="link-bottom mt-3 font-secondary">Немає акаунта?<a asp-controller="Account" asp-action="SignUpPage" >Зареєструватися</a></span>
        </form>
    </div>
</div>
<div class="keep-footer-down" style="height:5vh"></div>